    <title>JobPreview</title>
    <style>
        .preview{
            display: flexbox;
            justify-content: center;
            box-shadow: 4cap;   
        }
    </style>
</head>
<body>
  <!-- navbar -->

    <div class="w3-top">
        <div class="w3-bar w3-white w3-card" id="myNavbar">
          <a href="/" class="w3-bar-item w3-button w3-wide">LOGO</a>
          <!-- Right-sided navbar links -->
          <div class="w3-right w3-hide-small">
            <a href="/admin" class="w3-bar-item w3-button"><i class='bx bxs-dashboard'></i>DashBoard</a>

            <!-- <a href="/admin/jobpostform" class="w3-bar-item w3-button"><i class="fa fa-usd"></i> CREATE</a> -->
            <a href="#contact" class="w3-bar-item w3-button"><i class="fa fa-envelope"></i> CONTACT</a>
            <a href="/logout" class="w3-bar-item w3-button"><i class='bx bxs-log-out' ></i> Logout</a>
    
          </div>
          <!-- Hide right-floated links on small screens and replace them with a menu icon -->
      
          <a href="javascript:void(0)" class="w3-bar-item w3-button w3-right w3-hide-large w3-hide-medium" onclick="w3_open()">
            <i class="fa fa-bars"></i>
          </a>
        </div>
      </div>
      <!-- Nav bar ends ------------- -->

    <section class="preview">
        <br>
        <br>
        <div>
            <h2 class="heading">
                <a href="/job-post/<%-article._id  %>">
                    <b>
                        <%- article.jobTitle %>
                    </b>
                    
                </a>
            </h3>
            <h3>
                Descripiton : 
                <p class="snippet">
                    <%- article.jobDesc %>
                </p>
            </h3>
            <h4>
                Skills üõ†Ô∏è: 
                <%- article.skills %>
            </h4>
            <h4>
                duration üïí= <%- article.duration  %>
            </h4>
            <h4>
                Stipendüí∞ = <%- article.stipend %>
            </h4>
            <div>
                <button><i class="fa fa-thumbs-up" aria-hidden="true"></i>LIKE</button>
                <button style="padding: 5px;"><i class="fa-sharp fa-light fa-comment"></i>Comment</button>
              </div>
        </div>

        <form action="/job-post/<%- (article._id.toString()) %>" method="post">
                <label for="comment">Comments
                </label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="comment" placeholder="Type your comment here"></textarea>
                <button type="submit"class="btn btn-primary">Submit</button>

        </form>
        <div>
            <% commentArr.forEach(function(element){ %>
                <h3><%- element.user %></h3>
                <h4><%- element.comment %></h4>

            <% }) %>

        </div>
        
</section>
<script>
    // Modal Image Gallery
    function onClick(element) {
      document.getElementById("img01").src = element.src;
      document.getElementById("modal01").style.display = "block";
      var captionText = document.getElementById("caption");
      captionText.innerHTML = element.alt;
    }
    
    
    // Toggle between showing and hiding the sidebar when clicking the menu icon
    var mySidebar = document.getElementById("mySidebar");
    
    function w3_open() {
      if (mySidebar.style.display === 'block') {
        mySidebar.style.display = 'none';
      } else {
        mySidebar.style.display = 'block';
      }
    }
    
    // Close the sidebar with the close button
    function w3_close() {
        mySidebar.style.display = "none";
    }
    </script>
</body>
