<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title> Job-Spot </title>
  <!-- favicon -->
  <link rel="icon" type="image/png" href="/img/icons8-job-96.png">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <!-- Landing Page css styles4.css -->
  <link rel="stylesheet" href="/css/styles4.css">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/stylesSeachBar.css">
</head>

<body>
  <!-- navbar -->

  <div class="w3-top">
    <div class="w3-bar w3-white w3-card" id="myNavbar">
      <a href="/" class="w3-bar-item w3-button w3-wide"><img src="/img/icons8-job-96.png" alt="LOGO" width="30">
        JOBSPOT</a>
      <!-- Right-sided navbar links -->
      <% if(val){ %>
        <div class="w3-right w3-hide-small">
          <a href="/admin" class="w3-bar-item w3-button"><i class='bx bxs-dashboard'></i>DashBoard</a>
          <a href="#contact" class="w3-bar-item w3-button"><i class="fa fa-envelope"></i> CONTACT</a>
          <a href="/logout" class="w3-bar-item w3-button"><i class='bx bxs-log-out'></i> Logout</a>

        </div>
        <% }else{ %>
          <div class="w3-right w3-hide-small">
            <a href="/user/login" class="w3-bar-item w3-button"> <i class='bx bx-log-in'></i>Login</a>
            <a href="/user/register" class="w3-bar-item w3-button">Register</a>
          </div>
          <% } %>
            <!-- Hide right-floated links on small screens and replace them with a menu icon -->

            <a href="javascript:void(0)" class="w3-bar-item w3-button w3-right w3-hide-large w3-hide-medium"
              onclick="w3_open()">
              <i class="fa fa-bars"></i>
            </a>
    </div>
  </div>

  <!-- Sidebar on small screens when clicking the menu icon -->
  <nav class="w3-sidebar w3-bar-block w3-black w3-card w3-animate-left w3-hide-medium w3-hide-large"
    style="display:none" id="mySidebar">
    <a href="javascript:void(0)" onclick="w3_close()" class="w3-bar-item w3-button w3-large w3-padding-16">Close Ã—</a>
    <a href="#about" onclick="w3_close()" class="w3-bar-item w3-button">ABOUT</a>
    <a href="#team" onclick="w3_close()" class="w3-bar-item w3-button">TEAM</a>
    <a href="#work" onclick="w3_close()" class="w3-bar-item w3-button">WORK</a>
    <a href="#pricing" onclick="w3_close()" class="w3-bar-item w3-button">Create</a>
    <a href="#contact" onclick="w3_close()" class="w3-bar-item w3-button">CONTACT</a>
  </nav>

  <header class="bgimg-1 w3-display-container w3-grayscale-min" id="home">
    <br>
    <br>
    <br>
    <!-- search bar ------------->
    <div class="search-container">
      <form action="/" method="post">
        <input type="text" name="searchContent" id="search-input" placeholder="Search...">
        <button type="submit" id="search-button">Search</button>
      </form>
    </div>
    <!-- <br> -->
    <div class="search-container">
      <% if (typeof locals.searchJSON !="undefined" && locals.searchJSON !=null && locals.searchJSON.length !=null &&
        locals.searchJSON.length> 0) { %>
        <% locals.searchJSON.forEach((person)=>{%>
          <% if ((typeof person==null) || (person==null) ){ %>
            <% } else{ %>
              <a href="/admin/preview/<%-person._id %>">
                <div id="search-results" style="border-radius: 0.2rem">
                  <div id="search-input">
                    <h5><%- person.username %></h5>
                    <!-- <div style="display: flex ; align-items: center ; justify-content: space-between">
                    </div> -->
                    <p class="card-text" style="font-size: 0.8rem"><%- person.email %></p>

                  </div>
                </div>
              </a>
              <% } %>
                <%}) %>
                  <a href="/"><i class='bx bx-x-circle'></i></a>
                  <% } %>
    </div>

    <div class="w3-display-left w3-text-white" style="padding:48px">
      <span class="w3-jumbo w3-hide-small">Choose your Right Job</span><br>
      <span class="w3-xxlarge w3-hide-large w3-hide-medium">Choose your Right Job</span><br>
      <span class="w3-large">Stop wasting valuable time with projects that just isn't you.</span>
      <p><a href="#about"
          class="w3-button w3-white w3-padding-large w3-large w3-margin-top w3-opacity w3-hover-opacity-off">Learn more
          and start today</a></p>
    </div>
    <div>
      <img
      class="front_image"
        src="https://images.unsplash.com/photo-1576267423429-569309b31e84?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTF8fGVtcGxveWVlfGVufDB8fDB8fHww&auto=format&fit=crop&w=500&q=60"
        alt="image not found" />
    </div>

  </header>




  <section class="section-50">
    <h3 class="m-b-50 heading-line">Notifications <i class="fa fa-bell text-muted"></i></h3>
    <div class="container">
      <div class="notification-ui_dd-content">

        <% jobs.forEach(function(article){ %>
          <div class="notification-list notification-list--unread">
            <a href="/job-post/<%- article._id %>"> 
            <div class="notification-list_content">
              
                <div class="notification-list_detail">
                  <p>JOB Title : <%- article.jobTitle %></p>
                  <p class="text-muted" style="text-decoration: none;">JOB DESC : <%= article.jobDesc %>
                  </p>
                </div>
            </div>
          </a>
          </div>
          <% }) %>
  </section>
  <!-- ****************
      ABOUT SECTION 
     ********************-->
  <div class="w3-container" style="padding:128px 16px" id="about">
    <h3 class="w3-center">ABOUT THE COMPANY</h3>
    <p class="w3-center w3-large">Key features of our company</p>
    <div class="w3-row-padding w3-center" style="margin-top:64px">
      <div class="w3-quarter">
        <i class="fa fa-desktop w3-margin-bottom w3-jumbo w3-center"></i>
        <p class="w3-large">Responsive</p>
        <p>Lorem ipsum </p>
      </div>
      <div class="w3-quarter">
        <i class="fa fa-heart w3-margin-bottom w3-jumbo"></i>
        <p class="w3-large">Passion</p>
        <p>Lorem ipsum </p>
      </div>
      <div class="w3-quarter">
        <i class="fa fa-diamond w3-margin-bottom w3-jumbo"></i>
        <p class="w3-large">Design</p>
        <p>Lorem ipsum </p>
      </div>
      <div class="w3-quarter">
        <i class="fa fa-cog w3-margin-bottom w3-jumbo"></i>
        <p class="w3-large">Support</p>
        <p>Lorem ipsum </p>
      </div>
    </div>
  </div>
  <!-- Contact Section -->
  <div class="w3-container w3-light-grey" style="padding:128px 16px" id="contact">
    <h3 class="w3-center">CONTACT</h3>
    <p class="w3-center w3-large">Lets get in touch. Send us a message:</p>
    <div style="margin-top:48px">
      <p><i class="fa fa-map-marker fa-fw w3-xxlarge w3-margin-right"></i> MNNIT,Allahabad, INDIA</p>
      <p><i class="fa fa-envelope fa-fw w3-xxlarge w3-margin-right"> </i> Email: shrishrg@gmail.com</p>
      <p><i class="fa fa-envelope fa-fw w3-xxlarge w3-margin-right"> </i> Email: abhishek@gmail.com</p>
      <br>

      <footer>
        <div class="container px-5 py-8 mx-auto flex items-center sm:flex-row flex-col">
          <h1>Copyright &copy; Job-Spot 2023 ;</h1>
        </div>
      </footer>
      <script src="/js/script.js"></script>
      <script src="/js/scriptSearchBar.js"></script>
</body>

</html>