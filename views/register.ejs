<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Login and Signup Form </title>

    <!-- CSS -->
    <link rel="stylesheet" href="/css/style3.css">

    <!-- Boxicons CSS -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>

</head>

<body>
    <section class="container forms">

        <!-- Signup Form -->

        <div class="form signup">
            <div class="form-content">
                <header>Signup as <%-path%></header>
                <form action="/<%- path %>/register" method="post">
                    <div class="field input-field">
                        <input type="text" name="username" placeholder="Enter your username &#128512;"  class="input"  required autocomplete="off">
                    </div>
                    <div class="field input-field">
                        <input type="email" name="email" placeholder="Enter your email &#128512;"  class="input" required autocomplete="off">
                    </div>

                    <div class="field input-field">
                        <input type="password" name="password" placeholder="Create new password ðŸ¤“" class="password" required autocomplete="off">
                        <i class='bx bx-hide eye-icon'></i>
                    </div>


                    <div class="field button-field">
                        <button type="submit">Signup</button>
                    </div>
                </form>

                <div class="form-link">
                    <span>Already have an account? <a href="/<%- path %>/login" class="link login-link">Login</a></span>
                </div>
            </div>

            <div class="line"></div>

            <div class="media-options">
                <a href="/<%- alt %>/register" class="field facebook">
                    <i class='bx bxs-user'></i>
                    <span>Register as <%- alt %></span>
                </a>
            </div>

            <div class="media-options">
                <a href="#" class="field google">
                    <img src="/img/google.png" alt="google" class="google-img">
                    <span>Login with Google</span>
                </a>
            </div>

        </div>
    </section>

    <!-- JavaScript -->
    <script src="/js/script.js"></script>
</body>

</html>